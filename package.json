{
  "name": "multipack",
  "version": "0.0.1",
  "private": true,
  "description": "A community of web designers and developers in the West Midlands.",
  "homepage": "https://multipack.co.uk",
  "author": "Multipack",
  "contributors": [
    {
      "name": "Trevor Morris",
      "url": "https://www.trovster.com"
    },
    {
      "name": "Paul Robert Lloyd",
